---
interface Props {
    title: string
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{ title }</title>
	</head>
	<body class="
        bg-black
        min-w-full min-h-svh">
		<main class="
            w-full h-full
            grid
            md:grid-cols-3">
            <slot />
        </main>
	</body>
</html>
